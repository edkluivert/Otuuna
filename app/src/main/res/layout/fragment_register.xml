<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Appfragments.Register">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/auth_background"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:text="Quickly Sign Up"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
             android:layout_centerInParent="true"
            />

    </RelativeLayout>


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileImage"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_add_a_photo"
            app:civ_border="true"
            android:layout_marginTop="@dimen/_60sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:civ_border_color="@color/red"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/yellow"
            app:civ_shadow_radius="@dimen/_4sdp" />

        <ProgressBar
            android:id="@+id/profileProgbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_95sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            android:indeterminateTint="@color/red"

            />


        <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_180sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        >

        <EditText
            android:id="@+id/regEmail"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:padding="@dimen/_10sdp"
            android:inputType="textEmailAddress"
            android:drawableEnd="@drawable/ic_email"
            android:background="@drawable/edittext_layout"
            />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:hint="Enter password"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_240sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        >

        <EditText
            android:id="@+id/regPassword"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:padding="@dimen/_10sdp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_layout"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/regFirstname"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:padding="@dimen/_10sdp"
        android:inputType="text"
        android:hint="First name"
        android:drawableEnd="@drawable/ic_person"
        android:layout_marginTop="@dimen/_310sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edittext_layout"
        />

    <EditText
        android:id="@+id/regLastname"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:padding="@dimen/_10sdp"
        android:inputType="text"
        android:hint="Lastname"
        android:drawableEnd="@drawable/ic_person"
        android:layout_marginTop="@dimen/_370sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edittext_layout"
        />

    <ProgressBar
        android:id="@+id/regProgbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/red"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_140sdp"
        />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_80sdp"
        android:background="@color/red"
        android:text="SIGN UP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"


        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

