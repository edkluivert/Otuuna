<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Appfragments.Register">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/favicon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/regtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Create Account"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_bold"
            android:textSize="@dimen/_22ssp"

            />

        <TextView
            android:id="@+id/regtext3"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
           app:layout_constraintTop_toBottomOf="@id/regtext1"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Create a free account and start
            uploading or purchasing photos."
            android:fontFamily="@font/raleway"
            android:textSize="@dimen/_16ssp"

            />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:fontFamily="@font/raleway"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/regFullname"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputregEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        >

        <EditText
            android:id="@+id/regEmail"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorGrey"
            android:padding="@dimen/_10sdp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_layout"
            />


    </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/raleway"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/regPhone"
            />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputregpassword"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:hint="Enter password"
        app:layout_constraintTop_toBottomOf="@id/tvPassword"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        >

        <EditText
            android:id="@+id/regPassword"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorGrey"
            android:padding="@dimen/_10sdp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_layout"
            />
    </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tvFullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:fontFamily="@font/raleway"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/regtext3"
            />

    <EditText
        android:id="@+id/regFullname"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorGrey"
        android:padding="@dimen/_10sdp"
        android:inputType="text"
        android:hint="Full name"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/tvFullname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edittext_layout"
        />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:fontFamily="@font/raleway"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputregEmail"
            />

    <EditText
        android:id="@+id/regPhone"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorGrey"
        android:padding="@dimen/_10sdp"
        android:inputType="number"
        android:hint="Phone number"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/tvPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/edittext_layout"
        />

    <ProgressBar
        android:id="@+id/regProgbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
         android:layout_marginTop="@dimen/_20sdp"
        android:indeterminateTint="@color/red"
        app:layout_constraintTop_toBottomOf="@id/inputregpassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/auth_button3"
        android:text="CREATE ACCOUNT"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/regProgbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"/>


        <TextView
            android:id="@+id/regtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/raleway"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/btnRegister"
            app:layout_constraintStart_toStartOf="parent"

            />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/red"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/raleway_bold"
            android:layout_marginEnd="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/btnRegister"
            app:layout_constraintStart_toEndOf="@id/regtext2"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

