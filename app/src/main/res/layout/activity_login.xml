<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.auth.Login">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/auth_background"
            >




            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_centerHorizontal="true"
                >
                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/otuunalogo"


                    />
            </com.facebook.shimmer.ShimmerFrameLayout>






        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:text="Quickly Sign In"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="#373535"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_40sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_290sdp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter email"
            android:layout_marginBottom="@dimen/_240sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            >

            <EditText
                android:id="@+id/edemail"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:padding="@dimen/_10sdp"
                android:inputType="textEmailAddress"
                android:drawableEnd="@drawable/ic_email"
                android:background="@drawable/edittext_layout"
                />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:hint="Enter password"
            android:layout_marginBottom="@dimen/_170sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            >

            <EditText
                android:id="@+id/edpassword"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:padding="@dimen/_10sdp"
                android:inputType="textPassword"
                android:background="@drawable/edittext_layout"
                />
        </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:id="@+id/btnLogin"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/red"
            android:text="LOG IN"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_90sdp"
            android:textColor="@color/white"

            />



        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_60sdp"
            android:textColor="@color/red"
            android:text="Forgot password?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />




</androidx.constraintlayout.widget.ConstraintLayout>