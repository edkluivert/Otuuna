<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Appfragments.ProfileEdit">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/auth_background"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:text="Edit Profile"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profileImage"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_a_photo"
                app:civ_border="true"
                android:layout_marginTop="@dimen/_70sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:civ_border_color="@color/red"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/yellow"
                app:civ_shadow_radius="@dimen/_4sdp" />

            <ProgressBar
                android:id="@+id/profileProgbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_95sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                android:indeterminateTint="@color/red"

                />


            <EditText
                android:id="@+id/saveFirstname"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:padding="@dimen/_10sdp"
                android:inputType="text"
                android:hint="First name"
                android:drawableEnd="@drawable/ic_person"
                android:layout_marginTop="@dimen/_250sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/edittext_layout"
                />

            <EditText
                android:id="@+id/saveLastname"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:padding="@dimen/_10sdp"
                android:inputType="text"
                android:hint="Lastname"
                android:drawableEnd="@drawable/ic_person"
                android:layout_marginTop="@dimen/_310sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/edittext_layout"
                />

            <ProgressBar
                android:id="@+id/saveProgbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/red"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/_200sdp"
                />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_130sdp"
                android:background="@color/red"
                android:text="Save"
                android:fontFamily="@font/raleway"
                app:layout_constraintBottom_toBottomOf="@id/saveProgbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/white"


                />


</androidx.constraintlayout.widget.ConstraintLayout>

